export GENOME=/juno/depot/assemblies/H.sapiens/b37/b37.fasta
export DBSNP=/juno/work/bic/socci/Work/Users/ElenitK/Wur4/Proj_14887/pipeline/GATK/resources/dbsnp/All_20150605.vcf.gz

